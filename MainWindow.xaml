        Title="Task Locker" Height="300" Width="400">
    <Grid>
        <Button Content="Блокировать систему"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="20,10"
                FontSize="16"
                Command="{Binding LockCommand}" />
    </Grid>
</Window>