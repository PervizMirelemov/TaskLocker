<Window x:Class="TaskLocker.WPF.Views.LockOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System Locked"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="False"
        Background="Black"
        Topmost="True"
        ShowInTaskbar="False"
        WindowState="Maximized"
        Cursor="None">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="СИСТЕМА ЗАБЛОКИРОВАНА" 
                       Foreground="White" 
                       FontSize="30" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock x:Name="CountdownText"
                       Text="Автоматическая разблокировка через 30 сек..." 
                       Foreground="LightGray" 
                       FontSize="24" 
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>